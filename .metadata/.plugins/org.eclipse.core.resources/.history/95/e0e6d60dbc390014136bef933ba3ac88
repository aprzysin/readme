package chpt1_1;

/**
 * @author Andrew
 *
 */
public class Project_1 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// declare variables
	  int CurrentExp;
	  int CurrentPrestige;
	  int PrestigeGoal;
	  int ExpTillPrestige;
	  int ExpTillPrestigeGoal;
	  
	  	//compute
	  CurrentExp = 1000000;
	  CurrentPrestige = 1;
	  PrestigeGoal = 2;
	  ExpTillPrestige = 1202800 - CurrentExp;
	  ExpTillPrestigeGoal = (1202800*PrestigeGoal) - (1202800*CurrentPrestige - CurrentExp);
	  
	  //print results
	  System.out.print("Exp Till The Next Prestige: ");
	  System.out.println(ExpTillPrestige);
	  System.out.print("Exp Till The Desired Pretige Level: ");
	  System.out.print(ExpTillPrestigeGoal);
	  
	  
	  
	  
	  
		// TODO Auto-generated method stub

	}

}
