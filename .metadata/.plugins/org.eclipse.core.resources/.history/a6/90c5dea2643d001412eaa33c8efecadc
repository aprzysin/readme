public class chpt11class {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		for ( int i = 1; i <= 10; i++) {
			for (int x = 1; x <= i; x++) {
			System.out.print(i);
			
		}
			System.out.println();
	}
	System.out.println(sum(10));	
		// TODO Auto-generated method stub

	}
	public static int sum(int n){
		return (n+1) * n / 2;
	}
}
